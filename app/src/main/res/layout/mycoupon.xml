<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:padding="1dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/tv_coupon_zone"
        android:layout_marginLeft="10.5dp"
        android:textColor="#333333"
        android:layout_marginTop="20dp"
        android:text="北京区域商家商品可用"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_below="@+id/tv_coupon_zone"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/couponcommonbody"
        android:orientation="horizontal"


        >

        <RelativeLayout

            android:layout_width="110dp"
            android:layout_height="110dp"

            android:background="@drawable/couponnormal">

            <TextView
                android:id="@+id/discunt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:text="满减200"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/quta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/discunt"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="#1366B5"
                android:layout_centerHorizontal="true"
                android:text="满800可用" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:background="@drawable/coupon_type_bg"
                android:gravity="center"

                android:text="东劵" />

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#333333"
                android:layout_below="@+id/type"
                android:text="使用范围："
                android:textSize="14dp" />


            <TextView
                android:id="@+id/goods_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:layout_marginTop="5dp"
                android:text="仅可购买北京地区商品"
                android:layout_below="@+id/area"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/beginTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:text="2017.1.1-2017.2.2"
                android:layout_below="@+id/goods_zone"
                android:layout_marginLeft="10dp"
                android:textColor="#666666"
                android:textSize="12dp" />

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/receivecoupon"
                android:id="@+id/iv_receive_coupon" />
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领取"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/receive"
                android:background="@drawable/receive_coupon_bg" />

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>