<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/single_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="零售价"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sku_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/dominant_color"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/sku_authentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="批发价认证后可见"
        android:visibility="gone"
        android:textColor="#666666"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/wholesale_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wholesale_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批发价"
            android:textColor="@color/word_big"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/wholesale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/dominant_color"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>