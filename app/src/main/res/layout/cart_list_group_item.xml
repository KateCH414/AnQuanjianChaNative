<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/group_check"
            android:src="@drawable/check_icon"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <ImageView
        android:id="@+id/vendor_icon"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/group_check"
        android:layout_marginLeft="18dp"
        android:src="@drawable/vendor_icon"
        android:layout_width="21dp"
        android:layout_height="20dp" />

        <TextView
            android:id="@+id/vendor_name"
            android:layout_toRightOf="@id/vendor_icon"
            tools:text="同仁堂医药店"
            android:textSize="@dimen/text_body"
            android:textColor="@color/word_midlle"
            android:layout_marginLeft="9dp"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            style="@style/Ripple"
            android:id="@+id/coupon"
            android:textSize="@dimen/text_body"
            tools:text="优惠券"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/dominant_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <View
        android:layout_alignParentBottom="true"
        style="@style/Divider.Line"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/scan_other_sku"
        style="@style/Ripple"
        android:textSize="@dimen/text_body"
        android:textColor="@color/word_midlle"
        tools:text="查看其余N件"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/scan_all_sku_pic"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <View
        android:id="@+id/divider"
        style="@style/Divider.Line"
        android:layout_below="@id/scan_other_sku"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

</LinearLayout>