<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparent">

    <RelativeLayout
        android:id="@+id/id_popup_linear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/id_popup_tv_foldername"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:textColor="@color/wheat"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/id_iv_drop_down"/>

        <ImageView
            android:id="@+id/id_iv_drop_down"
            android:layout_alignParentRight="true"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_arrow_drop_down_black_48dp" />

        <View
            android:layout_alignParentRight="true"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@color/black_semi_transparent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <TextView
            android:id="@+id/id_popup_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/wheat"
            android:textSize="14sp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</LinearLayout>
