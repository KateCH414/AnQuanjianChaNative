<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_end_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miko.zd.anquanjianchanative.PreviewReportActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="报告预览"
                android:textColor="@color/white"
                android:textSize="@dimen/text_title_size" />

            <TextView
                android:id="@+id/id_tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="保存"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_title_size" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/id_rl_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/id_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_marginLeft="17dp"
            android:layout_centerVertical="true"
            android:id="@+id/id_tv_dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/id_tv_dept"
            android:layout_centerVertical="true"
            android:id="@+id/id_tv_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@id/id_tv_room"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/id_tv_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/id_rl_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_rcyc_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>
