<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/id_tb_selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">

                <ImageButton
                    android:id="@+id/id_selector_back"
                    android:layout_width="14dp"
                    android:layout_height="21dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:background="@mipmap/back" />

                <TextView
                    android:id="@+id/id_tv_back_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/id_selector_back"
                    android:layout_toRightOf="@+id/id_selector_back"
                    android:text="返回"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="选择图片"
                    android:textColor="@color/white"
                    android:textSize="17sp" />
                <Button
                    android:id="@+id/id_bt_complete_pic_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_bt_complete_toolbar"
                    android:text="完成"
                    android:textColor="@color/white"/>
        </RelativeLayout>


        <GridView
            android:id="@+id/id_gv_pic_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:numColumns="3"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp" />

</LinearLayout>
